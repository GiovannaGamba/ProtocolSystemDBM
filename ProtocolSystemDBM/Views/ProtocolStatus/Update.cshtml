@model ProtocolSystemDBM.ViewModels.ProtocolStatuses.UpdateProtocolStatusViewModel
@{
    ViewData["Title"] = "Gestão de Status de Protocolos";
}

<div class="container mt-5">
    <h2 class="mb-5 text-center">Edição de Status de Protocolo</h2>

    <hr />

    <div class="row">
        <div class="col-md-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            <form method="post" action="/protocolstatus/update">
                <input type="hidden" id="Id" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Nome (ex: Aprovado)" required />
                </div>

                <div class="mb-3">
                    <input type="checkbox" hidden class="form-check-input" id="Deleted" name="Deleted" @(Model.Deleted ? "checked" : "") />
                </div>

                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        </div>
    </div>
</div>
